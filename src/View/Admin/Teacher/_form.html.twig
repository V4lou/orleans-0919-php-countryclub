<form method="post" enctype="multipart/form-data">
    <input type="hidden" value="{{ teacher.id }}" name="id">

    <div class="form-group formAdmin col-md-8 col-lg-6">
        <label for="firstname">Pr√©nom : </label>
        <input type="text" class="form-control" id="firstname" value="{{ teacher.firstname }}" name="firstname">
        {% if errors.firstname is not null %}
            <ul class="alert alert-danger">
                <li>{{ errors.firstname }}</li>
            </ul>
        {% endif %}
    </div>

    <div class="form-group formAdmin col-md-8 col-lg-6">
        <label for="lastname">Nom : </label>
        <input type="text" class="form-control" id="lastname" value="{{ teacher.lastname }}" name="lastname">
        {% if errors.lastname is not null %}
            <ul class="alert alert-danger">
                <li>{{ errors.lastname }}</li>
            </ul>
        {% endif %}
    </div>

    <div class="form-group formAdmin col-md-8 col-lg-6">
        <div class="custom-file">
            <label for="image" >Photo : </label>
            <input type="hidden" name="MAX_FILE_SIZE" value="200000" />
            <input type="file" name="file" class="file-input" id="image">
            {% if errors.file is not null %}
                <ul class="alert alert-danger">
                    <li>{{ errors.file }}</li>
                </ul>
            {% endif %}
        </div>
    </div>


    <div class="form-group formAdmin col-md-8 col-lg-6">
        <label for="description">Description : </label>
        <textarea class="form-control" id="description" rows="3" name="description">{{ teacher.description }}</textarea>
        {% if errors.description is not null %}
            <ul class="alert alert-danger">
                <li>{{ errors.description }}</li>
            </ul>
        {% endif %}
    </div>

    <div class="btnFormAdmin">
        <button type="submit" class="btn btn-outline-secondary col-md-3 col-lg-2 col-4">Valider</button>
    </div>

</form>

<a href="/AdminTeacher/index">
    <button type="submit" class="btn btn-outline-secondary btnReturnAdmin col-md-2 col-lg-1 col-3">< Retour</button>
</a>


