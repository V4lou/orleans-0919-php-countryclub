<form method="post">
    <input type="hidden" value="{{ member.id }}" name="id">

    <div class="form-group formAdmin col-md-8 col-lg-6">
        <label for="firstname">Pr√©nom : </label>
        <input type="text" class="form-control" id="firstname" value="{{ member.firstname }}" name="firstname">
        {% if errors.firstname is not null %}
            <ul class="alert alert-danger">
                <li>{{ errors.firstname }}</li>
            </ul>
        {% endif %}
    </div>

    <div class="form-group formAdmin col-md-8 col-lg-6">
        <label for="lastname">Nom : </label>
        <input type="text" class="form-control" id="lastname" value="{{ member.lastname }}" name="lastname">
        {% if errors.lastname is not null %}
            <ul class="alert alert-danger">
                <li>{{ errors.lastname }}</li>
            </ul>
        {% endif %}
    </div>

    <div class="form-group formAdmin col-md-8 col-lg-6">
        <label for="picture">Nom de l'image : </label>
        <input type="text" class="form-control" id="picture" value="{{ member.picture }}" name="picture">
        {% if errors.picture is not null %}
            <ul class="alert alert-danger">
                <li>{{ errors.picture }}</li>
            </ul>
        {% endif %}
    </div>

    <div class="form-group formAdmin col-md-8 col-lg-6">
        <label for="function">Function : </label>
        <textarea class="form-control" id="function" rows="3" name="function">{{ member.function }}</textarea>
        {% if errors.function is not null %}
            <ul class="alert alert-danger">
                <li>{{ errors.function }}</li>
            </ul>
        {% endif %}
    </div>

    <div class="btnFormAdmin">
        <button type="submit" class="btn btn-outline-secondary col-md-3 col-lg-2 col-4">Valider</button>
    </div>
</form>

<a href="/AdminMember/index">
    <button type="submit" class="btn btn-outline-secondary btnReturnAdmin col-md-2 col-lg-1 col-3">< Retour</button>
</a>

