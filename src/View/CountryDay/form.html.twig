
    <form method="post"  enctype="multipart/form-data" >
        <div class="form-group formAdmin col-md-8 col-lg-6">
            <label  for="subtitle">Titre :</label>
            <input type="text" class="form-control" id="subtitle" placeholder="Votre titre" name="subtitle" value="{{ data.subtitle }}">
            {% if errors.subtitle is not null %}
                <ul class="alert alert-danger">
                    <li>{{ errors.subtitle }}</li>
                </ul>
            {% endif %}
        </div>
        <div class="form-group formAdmin col-md-8 col-lg-6">
            <label  for="description" >Description :</label>
            <textarea class="form-control" id="description" rows="3" placeholder="Votre description" name="description">{{ data.description }}</textarea>
            {% if errors.description is not null %}
                <ul class="alert alert-danger">
                    <li>{{ errors.description }}</li>
                </ul>
            {% endif %}
        </div>
        <div class="form-group formAdmin col-md-8 col-lg-6">
            <div class="custom-file">
                <label  for="image">Image country day :</label>
                <input type="hidden" name="MAX_FILE_SIZE" value="200000" />
                <input type="file" name="file" class="file-input" id="image">
                {% if errors.file is not null %}
                    <ul class="alert alert-danger">
                        <li>{{ errors.file }}</li>
                    </ul>
                {% endif %}
            </div>
        </div>
        <div class="form-group formAdmin col-md-8 col-lg-6">
            <label  for="video">Video :</label>
            <input type="text" class="form-control" id="video" placeholder="Mettre id video YouTube FqJl3d7yU5g" name="media" value="{{ data.media }}">
            {% if errors.media is not null %}
                <ul class="alert alert-danger">
                    <li>{{ errors.media }}</li>
                </ul>
            {% endif %}
        </div>
        <div class="form-group formAdmin col-md-8 col-lg-6">
            <label  for="start">Date </label>
            <input type="date" class="form-control" id="start"  name="date" >
            {% if errors.date is not null %}
                <ul class="alert alert-danger">
                    <li>{{ errors.date }}</li>
                </ul>
            {% endif %}
        </div>
        <div class="btnFormAdmin">
            <button type="submit" class="btn btn-outline-secondary col-md-3 col-lg-2 col-4">Valider</button>
        </div>
    </form>
    <a href="/AdminCountryDay/index">
        <button type="submit" class="btn btn-outline-secondary btnReturnAdmin col-md-2 col-lg-1 col-3">< Retour</button>
    </a>

